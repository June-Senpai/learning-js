<div class="container">
  <div class="column">
    <h3>HOME</h3>
    <h2 id="score-el" class="score-bd">0</h2>
    <button id="sneha">+1</button>
    <button onclick="two()">+2</button>
    <button onclick="three()">+3</button>
  </div>
  <div class="column">
    <h3>GUEST</h3>
    <h2 class="score-bd">0</h2>
    <button onclick="one()">+1</button>
    <button onclick="two()">+2</button>
    <button onclick="three()">+3</button>
    <br />
  </div>
</div>

<script>
  const scoreEl = document.getElementById("score-el")
  let scoreBD = document.querySelector("#score-bd")
  let s = 0

  document.getElementById("sneha").addEventListener("click", one)

  function one() {
    s += 1
    scoreEl.textContent = s
  }

  function two() {
    s += 2
    scoreBD.innerText = s
  }
  function three() {
    s += 3
    scoreBD.textContent = s
  }
</script>

